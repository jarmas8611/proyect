{% extends_admingenerated "TaskeetMainBundle:TicketNew:index.html.twig" %}


{% block javascripts %}
    {{ parent() }}
    <script>
        $(function(){
            $("#new_ticket_department").change(function(){
                var data = {
                    department_id: $(this).val()
                };

                $.ajax({
                    type: 'post',
                    url: '{{ path("select_users") }}',
                    data: data,
                    success: function(data) {
                        $('#new_ticket_assignedTo').html(data);
                    }
                });
            });
        });
    </script>
{% endblock %}
