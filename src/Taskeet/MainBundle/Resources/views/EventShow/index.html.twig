{% extends_admingenerated "TaskeetMainBundle:EventShow:index.html.twig" %}
{% block page_title %}
    <div class="row-fluid">
        <div class="span1">
            <ul class="image-list">
                <li>
                    {% if Event.type %}
                        {#{% if Ticket.status.imageName %}#}
                        <img src="{{ asset('bundles/taskeetmain/img/attach.png') }}">
                        {#{% endif %}#}
                    {% endif %}
                </li>
            </ul>

        </div>
        <div class="span11">
            <header>
                <h1>{% trans with {'%object%': Event.title,} from "TaskeetMainBundle" %}"%object%"{% endtrans %}</h1>
