{% extends_admingenerated "TaskeetMainBundle:ProjectShow:index.html.twig" %}

{% block page_title %}{% endblock %}

{% block object %}
    {#<div class="container">#}
    <div class="show">
        <div class="span4">
            <div class="span4"><img src="{{ asset('bundles/taskeetmain/img/percent.png') }}"></div>
            <div class="span8">
                <div class="show-name project-general">
                    <h1 class="percent">60%</h1>
                    <h1>{{ Project.name }}</h1>
                </div>
                <h4>{{ 'Startdate'|trans({}, 'TaskeetMainBundle') }}: {% if Project.startDate %}{{ Project.startDate|localizeddate("medium") }}{% endif %}</h4>
                <h4>{{ 'Duedate'|trans({}, 'TaskeetMainBundle') }}: {% if Project.dueDate %}{{ Project.dueDate|localizeddate("medium", "medium") }}{% endif %}</h4>
                <h4 class="italic">{{ 'Client'|trans({}, 'TaskeetMainBundle') }}:{{ Project.client }}</h4>
                <h4 class="color">{{ Project.members | length }} {{ 'Members'|trans({}, 'TaskeetMainBundle') }}</h4>
                <h4 class="color">{{ Project.departments | length }} {{ 'Departments'|trans({}, 'TaskeetMainBundle') }}</h4>

                <h5>{{ 'Created'|trans({}, 'TaskeetMainBundle') }}:{% if Project.created %}{{ Project.created | localizeddate("medium", "medium") }}{% endif %}</h5>
            </div>
        </div>
        <div class="span4">
            {{ render(controller('TaskeetMainBundle:Ticket/List:miniList', {'Tickets':Project.tickets}))}}
        </div>
        <div class="span4">
            <div class="show-name">
                <h1>{{ 'Members'|trans({}, 'TaskeetMainBundle') }}</h1>
            </div>
            <div class="members">
                {% for object in Project.members %}
                    <h6 class="color">{{ object }}</h6>
                {% endfor %}
            </div>
            <a class="btn btn-primary" data-action="{{ path("Taskeet_MainBundle_User_new") }}">
                <i class="icon-white icon-plus"></i> Miembro
            </a>

        </div>
    </div>
    {#</div>#}
{% endblock %}

{% block form_buttons %}
    <div class="form-actions span12">
        {% block form_actions %}

            <a class="btn " href="{{ path("Taskeet_MainBundle_Project_list") }}"
                    ><i class="icon-list-alt"></i> {% trans from "Admingenerator" %}action.generic.list{% endtrans %}</a>

            <a class="btn " href="{{ path("Taskeet_MainBundle_Project_edit", { pk: Project.id }) }}"
                    ><i class="icon-edit"></i> {% trans from "Admingenerator" %}action.object.edit.label{% endtrans %}</a>

            <a class="btn btn-primary" href="{{ path("Taskeet_MainBundle_Project_new") }}"
                    ><i class="icon-white icon-plus"></i> {% trans from "Admingenerator" %}action.generic.new{% endtrans %}</a>

        {% endblock %}

    </div>
{% endblock %}
