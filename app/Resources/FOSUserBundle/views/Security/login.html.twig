{% extends "TaskeetMainBundle::base_login.html.twig" %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}
<div class="connection">
<form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">

    <div class="big-logo">
        <img src={{ asset("bundles/taskeetmain/img/logobig.png") }}>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="control-group">
        <label class="control-label" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>

        <div class="controls">
        <input type="text" id="username" name="_username" class="big" value="{{ last_username }}" required="required" />

        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
        <div class="controls">
        <input type="password" id="password" name="_password" required="required" class="big" />

        </div>
    </div>

    <div class="control-group">
        <div class="controls">
            <label class="control-label for="remember_me">
                <input type="checkbox" />{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
            </label>
        </div>
    </div>

    <div class="form-actions">

        <div class="controls">
            <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
        </div>
    </div>
</form>
</div>
{% endblock fos_user_content %}
